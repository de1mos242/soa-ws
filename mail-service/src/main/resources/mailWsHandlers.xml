<handler-chains xmlns="http://java.sun.com/xml/ns/javaee">
    <handler-chain>
        <handler>
            <handler-name>SoapStatisticHandler</handler-name>
            <handler-class>com.github.gkislin.common.web.handler.SoapStatisticHandler</handler-class>
        </handler>
        <handler>
            <handler-name>SoapLoggingHandler</handler-name>
            <handler-class>com.github.gkislin.common.web.handler.SoapServerLoggingHandler</handler-class>
        </handler>
        <handler>
            <handler-name>MailSecurityHandler</handler-name>
            <handler-class>com.github.gkislin.mail.MailSecurityHandler</handler-class>
        </handler>
    </handler-chain>
</handler-chains>